{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    {# on centre le titre  #}
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>Login des Insectes</h2>
        </div>
    </div>
    {#  affichage des erreurs #}
    {% if error %}
        <div class="col-md-6 col-md-offset-3 alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {# formulaire d'authentification des insectes  #}
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {# Token pour la sécurité  #}
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        {% endif %}
        {#  les inputs  #}
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="form-group">
                    <label for="username">Login</label>
                    <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required"/>
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" class="form-control" name="_password" required="required"/>
                </div>
                <div class="form-group">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                    <label for="remember_me">se souvenir de moi?</label>
                </div>
                <div class="form-group">
                    <a href="/register">S'inscire?</a>
                </div>
                <div class="form-group">
                    <input type="submit" id="_submit" name="_submit" value="Connexion"/>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
